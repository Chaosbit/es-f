
<!-- Module configuration -->

<configuration>

  <section name="Module">

    <section name="Auction">

      <!--
        Show ended auctions/groups with an other (smaller) layout
      -->
      <config name="LayoutEnded" type="bool">TRUE</config>

      <!--
        Max. image width/height image popup
      -->
      <config name="ImageSize" type="int">500</config>

      <!--
        Load images from eBay
      -->
      <config name="LoadImages" type="bool">TRUE</config>

      <!--
        Image file, which is used, if we can't get an image from ebay
      -->
      <config name="NoImage">module/auction/layout/q-mark.gif</config>

      <!--
        Your prefered default |es|f| currency, will not shown in auction view
      -->
      <config name="Currency">EUR</config>

      <!--
        Show refresh buttons on hich level
        0 : no extra refresh buttons
        1 : only on category level
        2 : on group and category level (default)
        3 : on auction, group and category level
      -->
      <config name="RefreshButtons" type="int">2</config>

      <!--
        Make countdown JS
        0 : No (static time)
        1 : Next ending auction only (default)
        2 : All auctions, but HIGH work load for browser
      -->
      <config name="Countdown" type="int">1</config>

      <!--
        hold complete esniper log file for each group,
        delete not on new esniper start after changes
      -->
      <config name="HoldAuctionLog" type="bool">TRUE</config>

      <!--
        Wait for x seconds after starting an auction to make sure, a correct
        esniper process is running.
        If esniper finds out, that the actual price is lower your bid, it will
        stop after some seconds and es-f will register this.
      -->
      <config name="Wait4EsniperStart" type="int">5</config>

      <!-- *******************************************************************
      **  Don't change from here
      ******************************************************************** -->

      <config name="LoginRequired" type="bool">TRUE</config>

      <config name="Name">Main module for auction management</config>

      <config name="Author">Knut Kohl</config>
      <config name="Email">knutkohl@users.sourceforge.net</config>

      <config name="Version">0.7.0</config>

    </section>

  </section>

</configuration>
