<configuration>

  <section name="Plugin">

    <section name="AddFromEbayUrl">

      <!--
        Pattern to find an auction id in an url
        Match #1 MUST be the item id!
      -->
      <config name="Pattern" type="array">
        <config>~(\d{8,})~</config>
        <config>~item%3D(\d+)~i</config>
        <config>~item=(\d+)~i</config>
        <config>~itemZ(\d+)~i</config>
      </config>

      <!-- *******************************************************************
      **  Don't change from here
      ******************************************************************** -->

      <config name="Name">Identify an item id if an ebay url is submitted</config>

      <config name="Category">Interface</config>

      <config name="Author">Knut Kohl</config>
      <config name="Email">knutkohl@users.sourceforge.net</config>

      <config name="Version">0.1.0</config>
    </section>

  </section>

</configuration>
