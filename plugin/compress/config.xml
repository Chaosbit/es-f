<!--
  This plugin removes all not required white spaces and line breakes
  from html code.

  Disable only for debugging, the default layout works best and is optimized
  for this plugin!
-->

<configuration>

  <section name="Plugin">

    <section name="Compress">

      <!--
        Hold HTML comments
      -->
      <config name="RemoveComments" type="bool">TRUE</config>

      <!-- *******************************************************************
      **  Don't change from here
      ******************************************************************** -->

      <config name="Name">Removes all not required white spaces and line breakes from html code</config>

      <config name="Category">Interface</config>

      <config name="Author">Knut Kohl</config>
      <config name="Email">knutkohl@users.sourceforge.net</config>

      <config name="Version">0.2.0</config>
    </section>

  </section>

</configuration>
